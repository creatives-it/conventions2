{% extends 'page.html.twig' %}

{% block titre_page %}{{ 'Conventions supprimees'|trans }}{% endblock %}
{% block titre %}{{ 'Conventions supprimees'|trans }}{% endblock %}
{% block contenu %}
    <div class="container">
        <div class="row">
            <div class="col-md-12 ">
                <div class="box box-success">

                    <div class="row">
                        <div class="col-md-12 mt-4 pt-2">
                            {% if rows|length > 0 %}
                            <table class="table table-striped">
                                <thead>
                                <tr>
                                    <th scope="col">{{ 'Numero'|trans}}</th>
                                    <th scope="col">{{ 'Objet Convention'|trans}}</th>
                                    <th scope="col">{{ 'Deleted At'|trans}}</th>
                                    <th scope="col"></th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for convention in rows %}
                                <tr>
                                    <td>{{ convention.numero }}</td>
                                    <td>{{ convention.objetConvention }}</td>
                                    <td>{{ convention.deletedAt is empty ? "": convention.deletedAt|date('Y/m/d H:i:s') }}</td>
                                    <td>
                                        <a class="btn btn-sm btn-danger" title="{{ 'Undelete'|trans }}" href="{{ path('trash_undelete_convention', { id: convention.id}) }}">
                                            <i class="glyphicon glyphicon-send"></i>
                                            {{ 'Undelete'|trans }}
                                        </a>
                                    </td>
                                </tr>
                                {% endfor %}

                                </tbody>
                            </table>
                            {% else %}
                                <h4>{{ 'Aucune convention supprimee'|trans }}</h4>
                            {% endif %}
                        </div><!--end col-->
                    </div>

                </div>

            </div>
        </div>






    </div>
{% endblock %}
